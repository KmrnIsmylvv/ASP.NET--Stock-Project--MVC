@using Stock_MVC.Models.Entity
@model List<TBL_MEHSULLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead></thead>
    <tr>
        <th>ID</th>
        <th>ADI</th>
        <th>MARKASI</th>
        <th>KATEQORİYA</th>
        <th>QİYMƏT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCƏLLƏ</th>
    </tr>
    <tbody>
        @foreach (var mehsul in Model)
        {
            <tr>
                <th>@mehsul.MEHSULID</th>
                <td>@mehsul.MEHSULAD</td>
                <td>@mehsul.MARKA</td>
                <td>@mehsul.TBL_KATEQORIYALAR.KATEQORIYAAD</td>
                <td>@mehsul.QIYMET</td>
                <td>@mehsul.STOK</td>
                <td><a href="/Product/SIL/@mehsul.MEHSULID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Product/MehsulGetir/@mehsul.MEHSULID" class="btn btn-success">GÜNCƏLLƏ</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/YeniMehsul/" class="btn btn-primary">YENİ MƏHSUL ƏLAVƏ ET</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable();
</script>

